---
import Link from '~components/link/link.astro';
import cn from './nav.module.css';

interface Props {
    links: {
        href: string;
        label: string;
    }[];
}

const { links } = Astro.props;
const activePath = Astro.url.pathname;
---

<nav class={cn.container}>
    {
        links.map((link) => {
            const isActivePath = activePath === link.href;

            return (
                <Link
                    class:list={[cn.link, isActivePath && cn.active]}
                    href={link.href}
                >
                    {link.label}
                </Link>
            );
        })
    }
</nav>
