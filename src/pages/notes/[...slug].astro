---
import NotesLayout from '~layouts/note.astro';
import { getNoteData } from '~api/notes';

const { slug } = Astro.params;

if (!slug) {
    return Astro.rewrite(404);
}

const noteData = await getNoteData(slug);

if (!noteData) {
    return Astro.rewrite(404);
}

const {
    content: { Content },
    frontmatter,
} = noteData;
---

<NotesLayout {...frontmatter}>
    <Content />
</NotesLayout>
