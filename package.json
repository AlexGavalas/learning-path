{
    "name": "learning-path",
    "version": "0.4.0",
    "type": "module",
    "private": true,
    "engines": {
        "node": "20"
    },
    "scripts": {
        "dev": "astro dev",
        "start:server": "node -r dotenv/config ./dist/server/entry.mjs",
        "build": "cross-env PROD=true astro build",
        "preview": "pnpm build && astro preview",
        "astro": "astro",
        "index:notes": "tsx scripts/index-notes.ts",
        "index:summaries": "tsx scripts/index-summaries.runner.ts",
        "sync:db": "tsx scripts/sync-to-db.ts",
        "publish:notes": "tsx scripts/publish-notes.ts",
        "test": "jest",
        "test:e2e": "playwright test ./e2e",
        "test:e2e:watch": "playwright test --ui ./e2e",
        "test:coverage": "jest --coverage",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "test:watch": "jest --watch",
        "lint": "eslint",
        "prettier": "prettier .",
        "check:format": "pnpm prettier --list-different",
        "check:types": "tsc --noEmit",
        "format": "pnpm prettier --write",
        "prepare": "husky",
        "clean:install": "rm -rf node_modules/ pnpm-lock.yaml .astro/ dist/ && pnpm install && pnpm astro sync && pnpm playwright install --with-deps",
        "validate": "pnpm lint && pnpm check:format && pnpm check:types"
    },
    "dependencies": {
        "@astrojs/mdx": "3.1.2",
        "@astrojs/node": "8.3.2",
        "@astrojs/react": "^3.6.0",
        "@astrojs/sitemap": "3.1.6",
        "@astrojs/vercel": "7.7.2",
        "@astrojs/vue": "4.5.0",
        "@fontsource-variable/figtree": "5.0.21",
        "@formkit/tempo": "0.1.2",
        "@libsql/client": "0.8.0",
        "@nanostores/react": "0.7.2",
        "@nanostores/vue": "0.10.0",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vercel/edge-config": "1.2.0",
        "astro": "4.13.0",
        "cross-env": "7.0.3",
        "lodash": "4.17.21",
        "nanostores": "0.11.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tiny-invariant": "1.3.3",
        "vue": "3.4.31"
    },
    "devDependencies": {
        "@commitlint/cli": "19.3.0",
        "@commitlint/config-conventional": "19.2.2",
        "@eslint/js": "9.8.0",
        "@playwright/test": "1.45.1",
        "@trivago/prettier-plugin-sort-imports": "4.3.0",
        "@types/jest": "29.5.12",
        "@types/lodash": "4.17.6",
        "@types/node": "20.14.10",
        "@vanilla-extract/css": "1.15.2",
        "@vanilla-extract/vite-plugin": "4.0.10",
        "dotenv": "16.4.5",
        "eslint": "9.8.0",
        "eslint-plugin-astro": "1.2.3",
        "eslint-plugin-jest": "28.7.0",
        "gray-matter": "4.0.3",
        "husky": "9.1.1",
        "jest": "29.7.0",
        "lint-staged": "15.2.7",
        "ora": "8.0.1",
        "prettier": "3.3.2",
        "prettier-plugin-astro": "0.14.0",
        "pretty-quick": "4.0.0",
        "rehype-autolink-headings": "7.1.0",
        "rehype-external-links": "3.0.0",
        "rehype-slug": "6.0.0",
        "simple-git": "3.25.0",
        "ts-jest": "29.2.2",
        "ts-node": "10.9.2",
        "tsx": "4.16.2",
        "typescript": "5.5.3",
        "typescript-eslint": "8.0.0",
        "winston": "3.13.1"
    }
}
