{
    "name": "learning-path",
    "version": "0.3.0",
    "type": "module",
    "private": true,
    "engines": {
        "node": "18"
    },
    "scripts": {
        "dev": "astro dev",
        "start:server": "node -r dotenv/config ./dist/server/entry.mjs",
        "build": "cross-env PROD=true astro build",
        "preview": "astro preview",
        "astro": "astro",
        "index:notes": "tsx scripts/index-notes.ts",
        "index:summaries": "tsx scripts/index-lesson-summaries.runner.ts",
        "sync:types:supabase": "supabase gen types typescript --project-id cxftalfhgyhwkiwnyqjh --schema public > src/types/database.types.ts && pnpm format",
        "test": "jest",
        "test:e2e": "playwright test ./e2e",
        "test:e2e:watch": "playwright test --ui ./e2e",
        "test:coverage": "jest --coverage",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "test:watch": "jest --watch",
        "lint": "eslint --ignore-path .gitignore .",
        "prettier": "prettier .",
        "check:format": "pnpm prettier --list-different",
        "check:types": "tsc --noEmit",
        "format": "pnpm prettier --write",
        "prepare": "husky install",
        "validate": "pnpm lint && pnpm check:format && pnpm check:types"
    },
    "dependencies": {
        "@astrojs/mdx": "0.19.7",
        "@astrojs/node": "5.3.6",
        "@astrojs/sitemap": "2.0.2",
        "@astrojs/svelte": "3.1.1",
        "@astrojs/tailwind": "4.0.0",
        "@astrojs/vercel": "3.8.2",
        "@supabase/supabase-js": "2.33.1",
        "@tailwindcss/typography": "0.5.9",
        "@vercel/edge-config": "0.2.1",
        "astro": "2.10.14",
        "cross-env": "7.0.3",
        "date-fns-tz": "2.0.0",
        "rehype-autolink-headings": "6.1.1",
        "rehype-external-links": "2.1.0",
        "rehype-slug": "5.1.0",
        "svelte": "4.2.0",
        "tailwindcss": "3.3.3",
        "tiny-invariant": "1.3.1"
    },
    "devDependencies": {
        "@commitlint/cli": "17.7.1",
        "@commitlint/config-conventional": "17.7.0",
        "@playwright/test": "1.37.1",
        "@testing-library/dom": "9.3.1",
        "@testing-library/jest-dom": "6.1.2",
        "@testing-library/user-event": "14.4.3",
        "@trivago/prettier-plugin-sort-imports": "4.2.0",
        "@types/jest": "29.5.4",
        "@types/jest-axe": "3.5.5",
        "@types/node": "18.17.0",
        "@typescript-eslint/eslint-plugin": "6.5.0",
        "@typescript-eslint/parser": "6.5.0",
        "axios": "1.5.0",
        "date-fns": "2.30.0",
        "dotenv": "16.3.1",
        "eslint": "8.48.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-config-standard-with-typescript": "38.1.0",
        "eslint-plugin-import": "2.28.1",
        "eslint-plugin-n": "16.0.2",
        "eslint-plugin-promise": "6.1.1",
        "gray-matter": "4.0.3",
        "husky": "8.0.3",
        "jest": "29.6.4",
        "jest-axe": "8.0.0",
        "jest-environment-jsdom": "29.6.4",
        "lint-staged": "14.0.1",
        "prettier": "3.0.2",
        "prettier-plugin-astro": "0.12.0",
        "prettier-plugin-svelte": "3.0.3",
        "prettier-plugin-tailwindcss": "0.5.3",
        "supabase": "1.88.0",
        "ts-jest": "29.1.1",
        "ts-node": "10.9.1",
        "tsx": "3.12.7",
        "typescript": "5.1.6"
    }
}
