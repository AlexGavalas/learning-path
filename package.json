{
    "name": "learning-path",
    "version": "0.3.0",
    "private": true,
    "engines": {
        "node": "18"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "index:docs": "node -r tsm -r dotenv/config scripts/index-docs.ts dotenv_config_path=.env.local",
        "index:summaries": "node --no-warnings -r tsm -r dotenv/config scripts/index-lesson-summaries.ts dotenv_config_path=.env.local",
        "sync:types:supabase": "supabase gen types typescript --project-id cxftalfhgyhwkiwnyqjh --schema public > src/types/database.types.ts && pnpm format",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "test:watch": "jest --watch",
        "lint": "eslint --ignore-path .gitignore .",
        "prettier": "prettier .",
        "check:format": "pnpm prettier --list-different",
        "check:types": "tsc --noEmit",
        "format": "pnpm prettier --write",
        "prepare": "husky install",
        "validate": "pnpm lint && pnpm check:format && pnpm check:types"
    },
    "dependencies": {
        "@supabase/supabase-js": "2.25.0",
        "@vercel/edge-config": "0.2.0",
        "date-fns": "2.30.0",
        "gray-matter": "4.0.3",
        "next": "13.4.5",
        "next-mdx-remote": "4.4.1",
        "next-themes": "0.2.1",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "rehype-autolink-headings": "6.1.1",
        "rehype-external-links": "2.1.0",
        "rehype-slug": "5.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "17.6.3",
        "@commitlint/config-conventional": "17.6.3",
        "@tailwindcss/typography": "0.5.9",
        "@testing-library/jest-dom": "5.16.5",
        "@testing-library/react": "14.0.0",
        "@testing-library/user-event": "14.4.3",
        "@trivago/prettier-plugin-sort-imports": "4.1.1",
        "@types/jest": "29.5.1",
        "@types/jest-axe": "3.5.5",
        "@types/node": "18.16.9",
        "@types/react": "18.2.6",
        "@typescript-eslint/eslint-plugin": "5.59.7",
        "@typescript-eslint/parser": "5.59.7",
        "autoprefixer": "10.4.14",
        "axios": "1.4.0",
        "date-fns-tz": "2.0.0",
        "dotenv": "16.1.1",
        "encoding": "0.1.13",
        "eslint": "8.42.0",
        "eslint-config-next": "13.4.5",
        "eslint-config-prettier": "8.8.0",
        "husky": "8.0.3",
        "jest": "29.5.0",
        "jest-axe": "7.0.1",
        "jest-environment-jsdom": "29.5.0",
        "lint-staged": "13.2.2",
        "postcss": "8.4.23",
        "prettier": "2.8.8",
        "prettier-plugin-tailwindcss": "0.3.0",
        "supabase": "1.68.6",
        "tailwindcss": "3.3.2",
        "ts-jest": "29.1.0",
        "ts-node": "10.9.1",
        "tsm": "2.3.0",
        "typescript": "5.1.3",
        "unified": "10.1.2"
    }
}
