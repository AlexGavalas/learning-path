{
    "name": "learning-path",
    "version": "0.3.0",
    "type": "module",
    "private": true,
    "engines": {
        "node": "18"
    },
    "scripts": {
        "dev": "astro dev",
        "start:server": "node -r dotenv/config ./dist/server/entry.mjs",
        "build": "cross-env PROD=true astro build",
        "preview": "astro preview",
        "astro": "astro",
        "index:notes": "tsx scripts/index-notes.ts",
        "index:summaries": "tsx scripts/index-lesson-summaries.runner.ts",
        "sync:db": "tsx scripts/sync-to-db.ts",
        "publish:notes": "tsx scripts/publish-notes.ts",
        "sync:types:supabase": "supabase gen types typescript --project-id cxftalfhgyhwkiwnyqjh --schema public > src/types/database.types.ts && pnpm format",
        "test": "jest",
        "test:e2e": "playwright test ./e2e",
        "test:e2e:watch": "playwright test --ui ./e2e",
        "test:coverage": "jest --coverage",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "test:watch": "jest --watch",
        "lint": "eslint --ignore-path .gitignore .",
        "oxlint": "oxlint -D=all --jest-plugin --ignore-path=.gitignore",
        "prettier": "prettier .",
        "check:format": "pnpm prettier --list-different",
        "check:types": "tsc --noEmit",
        "format": "pnpm prettier --write",
        "prepare": "husky",
        "cleaninstall": "rm -rf node_modules/ pnpm-lock.yaml .astro/ dist/ && pnpm install && pnpm astro sync",
        "validate": "pnpm lint && pnpm check:format && pnpm check:types"
    },
    "dependencies": {
        "@astrojs/mdx": "2.1.0",
        "@astrojs/node": "8.0.0",
        "@astrojs/sitemap": "3.0.5",
        "@astrojs/tailwind": "5.1.0",
        "@astrojs/vercel": "7.0.1",
        "@supabase/supabase-js": "2.39.3",
        "@tailwindcss/typography": "0.5.10",
        "@vercel/edge-config": "0.4.1",
        "astro": "4.2.4",
        "cross-env": "7.0.3",
        "lodash": "4.17.21",
        "rehype-autolink-headings": "7.1.0",
        "rehype-external-links": "3.0.0",
        "rehype-slug": "6.0.0",
        "tailwindcss": "3.4.1",
        "tiny-invariant": "1.3.1"
    },
    "devDependencies": {
        "@commitlint/cli": "18.6.0",
        "@commitlint/config-conventional": "18.6.0",
        "@playwright/test": "1.41.1",
        "@testing-library/dom": "9.3.4",
        "@testing-library/jest-dom": "6.3.0",
        "@testing-library/user-event": "14.5.2",
        "@trivago/prettier-plugin-sort-imports": "4.3.0",
        "@types/jest": "29.5.11",
        "@types/jest-axe": "3.5.9",
        "@types/lodash": "4.14.202",
        "@types/node": "18.18.0",
        "@typescript-eslint/eslint-plugin": "6.19.1",
        "@typescript-eslint/parser": "6.19.1",
        "axios": "1.6.7",
        "date-fns": "3.3.1",
        "dotenv": "16.4.1",
        "eslint": "8.56.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-config-standard-with-typescript": "43.0.1",
        "eslint-plugin-jest": "27.6.3",
        "gray-matter": "4.0.3",
        "husky": "9.0.5",
        "jest": "29.7.0",
        "jest-axe": "8.0.0",
        "jest-environment-jsdom": "29.7.0",
        "lint-staged": "15.2.0",
        "ora": "8.0.1",
        "oxlint": "0.2.6",
        "prettier": "3.2.4",
        "prettier-plugin-astro": "0.13.0",
        "prettier-plugin-tailwindcss": "0.5.11",
        "pretty-quick": "4.0.0",
        "simple-git": "3.22.0",
        "supabase": "1.136.3",
        "ts-jest": "29.1.2",
        "ts-node": "10.9.2",
        "tsx": "4.7.0",
        "typescript": "5.3.3",
        "winston": "3.11.0"
    }
}
