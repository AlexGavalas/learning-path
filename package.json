        "react": "18.2.0",
        "react-dom": "18.2.0",
        "rehype-autolink-headings": "6.1.1",
        "rehype-external-links": "2.0.1",
        "rehype-slug": "5.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "17.5.1",
