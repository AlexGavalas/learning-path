{
    "name": "learning-path",
    "version": "0.4.0",
    "type": "module",
    "private": true,
    "engines": {
        "node": "20"
    },
    "scripts": {
        "dev": "astro dev",
        "start:server": "node -r dotenv/config ./dist/server/entry.mjs",
        "build": "cross-env PROD=true astro build",
        "preview": "astro preview",
        "astro": "astro",
        "index:notes": "tsx scripts/index-notes.ts",
        "index:summaries": "tsx scripts/index-lesson-summaries.runner.ts",
        "sync:db": "tsx scripts/sync-to-db.ts",
        "publish:notes": "tsx scripts/publish-notes.ts",
        "test": "jest",
        "test:e2e": "playwright test ./e2e",
        "test:e2e:watch": "playwright test --ui ./e2e",
        "test:coverage": "jest --coverage",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "test:watch": "jest --watch",
        "lint": "eslint",
        "prettier": "prettier .",
        "check:format": "pnpm prettier --list-different",
        "check:types": "tsc --noEmit",
        "format": "pnpm prettier --write",
        "prepare": "husky",
        "clean:install": "rm -rf node_modules/ pnpm-lock.yaml .astro/ dist/ && pnpm install && pnpm astro sync && pnpm playwright install --with-deps",
        "validate": "pnpm lint && pnpm check:format && pnpm check:types"
    },
    "dependencies": {
        "@astrojs/mdx": "3.1.0",
        "@astrojs/node": "8.2.5",
        "@astrojs/sitemap": "3.1.5",
        "@astrojs/vercel": "7.6.0",
        "@formkit/tempo": "0.1.1",
        "@libsql/client": "0.6.2",
        "@vercel/edge-config": "1.1.1",
        "astro": "4.10.0",
        "cross-env": "7.0.3",
        "lodash": "4.17.21",
        "tiny-invariant": "1.3.3"
    },
    "devDependencies": {
        "@commitlint/cli": "19.3.0",
        "@commitlint/config-conventional": "19.2.2",
        "@eslint/js": "9.4.0",
        "@playwright/test": "1.44.1",
        "@trivago/prettier-plugin-sort-imports": "4.3.0",
        "@types/jest": "29.5.12",
        "@types/lodash": "4.17.4",
        "@types/node": "20.14.2",
        "@vanilla-extract/css": "1.15.2",
        "@vanilla-extract/vite-plugin": "4.0.10",
        "dotenv": "16.4.5",
        "eslint": "9.4.0",
        "eslint-plugin-astro": "1.2.0",
        "eslint-plugin-jest": "28.5.0",
        "gray-matter": "4.0.3",
        "husky": "9.0.11",
        "jest": "29.7.0",
        "lint-staged": "15.2.5",
        "ora": "8.0.1",
        "prettier": "3.3.1",
        "prettier-plugin-astro": "0.14.0",
        "pretty-quick": "4.0.0",
        "rehype-autolink-headings": "7.1.0",
        "rehype-external-links": "3.0.0",
        "rehype-slug": "6.0.0",
        "simple-git": "3.24.0",
        "ts-jest": "29.1.4",
        "ts-node": "10.9.2",
        "tsx": "4.12.0",
        "typescript": "5.4.5",
        "typescript-eslint": "7.12.0",
        "winston": "3.13.0"
    }
}
