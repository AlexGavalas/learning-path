{
    "name": "learning-path",
    "version": "0.4.0",
    "type": "module",
    "private": true,
    "engines": {
        "node": "22"
    },
    "scripts": {
        "dev": "astro dev",
        "start:server": "node -r dotenv/config ./dist/server/entry.mjs",
        "build": "cross-env PROD=true astro build",
        "preview": "pnpm build && astro preview",
        "index:notes": "tsx scripts/index-notes.ts",
        "sync:db": "tsx scripts/sync-to-db.ts",
        "publish:notes": "tsx scripts/publish-notes.ts",
        "test": "jest",
        "test:e2e": "playwright test ./e2e",
        "test:e2e:watch": "playwright test --ui ./e2e",
        "test:coverage": "jest --coverage",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "test:watch": "jest --watch",
        "lint": "eslint",
        "prettier": "prettier .",
        "check:format": "pnpm prettier --list-different",
        "check:types": "tsc --noEmit",
        "format": "pnpm prettier --write",
        "prepare": "husky",
        "clean:install": "rm -rf node_modules/ pnpm-lock.yaml .astro/ dist/ && pnpm install && astro sync && pnpm playwright install --with-deps",
        "validate": "pnpm lint && pnpm check:format && pnpm check:types"
    },
    "dependencies": {
        "@astrojs/mdx": "4.1.0",
        "@astrojs/node": "9.1.0",
        "@astrojs/vercel": "8.1.0",
        "@fontsource/galdeano": "5.2.5",
        "@formkit/tempo": "0.1.2",
        "@libsql/client": "0.14.0",
        "astro": "5.4.0",
        "cross-env": "7.0.3",
        "remeda": "2.21.0",
        "tiny-invariant": "1.3.3"
    },
    "devDependencies": {
        "@commitlint/cli": "19.7.1",
        "@commitlint/config-conventional": "19.7.1",
        "@eslint/js": "9.21.0",
        "@playwright/test": "1.51.0",
        "@trivago/prettier-plugin-sort-imports": "5.2.2",
        "@types/jest": "29.5.14",
        "@types/node": "22.13.4",
        "dotenv": "16.4.7",
        "eslint": "9.21.0",
        "eslint-plugin-astro": "1.3.1",
        "eslint-plugin-jest": "28.11.0",
        "gray-matter": "4.0.3",
        "husky": "9.1.7",
        "jest": "29.7.0",
        "lint-staged": "15.4.3",
        "ora": "8.2.0",
        "prettier": "3.5.1",
        "prettier-plugin-astro": "0.14.1",
        "pretty-quick": "4.1.1",
        "rehype-autolink-headings": "7.1.0",
        "rehype-external-links": "3.0.0",
        "rehype-slug": "6.0.0",
        "simple-git": "3.27.0",
        "ts-jest": "29.2.5",
        "ts-node": "10.9.2",
        "tsx": "4.19.2",
        "typescript": "5.8.2",
        "typescript-eslint": "8.26.0",
        "winston": "3.17.0"
    }
}
