{
    "exclude": ["dist", "*.js"],
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
        "target": "ES2018",
        "strictNullChecks": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "composite": true,
        "baseUrl": "./src",
        "paths": {
            "~api/*": ["api/*"],
            "~components/*": ["components/*"],
            "~config/*": ["config/*"],
            "~content/*": ["content/*"],
            "~layouts/*": ["layouts/*"],
            "~lib/*": ["lib/*"],
            "~pages/*": ["pages/*"],
            "~scripts/*": ["scripts/*"],
            "~styles/*": ["styles/*"],
            "~test/*": ["test/*"],
            "~types/*": ["types/*"],
            "~constants": ["constants.ts"]
        },
        "types": ["vitest/globals"]
    }
}
